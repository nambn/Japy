<% provide(:title, 'All books') %>

<h1>Books</h1>

<table>
	<tr>
		<% Book.column_names.each do |k|%>
		<th><%= k.capitalize %></th>
		<% end %>
		<th></th>
	</tr>

	<% @books.each do |book| %>
	<tr>
		<% Book.column_names.each do |k|%>
		<% if  k == "cover_image" %>
		<td><%= image_tag book.attributes["#{k}"], width: "100" %></td>
		<% else %>
		<td><%= book.attributes["#{k}"] %></td>
		<% end %>
		<% end %>
		<td><%= link_to 'View', book %></td>	
	</tr>
	<% end %>
</table>